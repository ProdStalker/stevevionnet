            </tr>
            <tr>
                <th>endAt</th>
                <td>{{ client.detail.endAt ? client.detail.endAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>description</th>
                <td>{{ client.detail.description }}</td>
            </tr>
            <tr>
                <th>shortDescription</th>
                <td>{{ client.detail.shortDescription }}</td>
            </tr>
            <tr>
                <th>createdAt</th>
                <td>{{ client.detail.createdAt ? client.detail.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>updatedAt</th>
                <td>{{ client.detail.updatedAt ? client.detail.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
