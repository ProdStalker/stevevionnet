{% extends 'admin/base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>title</th>
                <td>{{ client.detail.title }}</td>
            </tr>
            <tr>
                <th>startAt</th>
