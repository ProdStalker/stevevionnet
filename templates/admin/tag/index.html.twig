{% extends 'admin/base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <h1>Tag index</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 30px;"></th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                    <tr>
                        <td style="background-color: {{ tag.color }};">
                        <td>{{ tag.name }}</td>
                        </td>
                        <td>
                            <a href="{{ path('admin_tag_edit', {id: tag.id}) }}">Editer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('admin_tag_new') }}">Create new</a>
{% endblock %}
