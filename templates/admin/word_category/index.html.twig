{% extends 'admin/base.html.twig' %}

{% block title %}Word category index{% endblock %}

{% block body %}
    <h1>Word category index</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('admin_word_category_new') }}">Create new</a>
{% endblock %}
