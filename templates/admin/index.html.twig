{% extends 'admin/base.html.twig' %}

{% block title %}
    Admin
{% endblock %}

{% block body %}
    <div class="row">
        {% for counter in counters %}
            <div class="col-6 col-md-4 col-lg-3">
                {{ component('counter', {
                    entity: counter.entity,
                    title: counter.title,
                    url: counter.url
                }) }}
            </div>
        {% endfor %}
    </div>

{% endblock %}

